<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_perfect">

    <ImageView
        android:id="@+id/iv_breakfast"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_menu"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#ffa500"/>

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_breakfast"
        app:layout_constraintTop_toTopOf="parent"
        android:text="早餐"
        android:textSize="20dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/tv_percent_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_menu"
        app:layout_constraintTop_toTopOf="@+id/tv_menu"
        android:text="20"
        android:textColor="#000"
        android:textSize="17dp"
        />

    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_percent_number"
        app:layout_constraintBottom_toBottomOf="@+id/tv_percent_number"
        android:text="%"
        android:textColor="#000"
        android:textSize="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu"
        app:layout_constraintRight_toLeftOf="@+id/tv_cal"
        android:text="("
        android:textColor="#000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="200"
        android:textColor="#000"
        android:textSize="12dp"
        app:layout_constraintHorizontal_bias="0.05"/>

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu"
        app:layout_constraintLeft_toRightOf="@+id/tv_cal"
        android:text="大卡"
        android:textColor="#000"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_menu"
        app:layout_constraintLeft_toRightOf="@+id/tv_unit"
        android:text=")"
        android:textColor="#000"
        android:textSize="12dp" />
</android.support.constraint.ConstraintLayout>